.leftView {
  background-color: #fff;
  padding: 13px 20px;
  margin: 10px 0;
  float: left;
  color: #000;
  border-radius: 24px;
  border-top-left-radius: 2px;
  font-size: 16px;
  line-height: 22px;
  overflow: hidden;
  word-wrap: break-word;
  text-align: justify;
  box-shadow: 0px 2px 4px rgba(212, 212, 212, 0.5);
}

.ai-qqemoji {
  background: url("https://res.wx.qq.com/mmspraiweb_node/dist/static/img/qqface2.7582741.png") no-repeat;
  width: 20px;
  height: 20px;
  text-indent: -999em;
  display: inline-block;
  display: -moz-inline-stack;
  display: inline-block;
  vertical-align: top;
  background-size: 360px 192px;
}

.have_options_content {
  margin: 10px 0;
  padding: 10px 18px;
  background: rgba(255,255,255,1);
  color: rgba(48,49,51,1);
  border-radius: 5px;
  max-width: calc(96vw - 120px);
  font-size: 13px;
  line-height: 18px;
  overflow: hidden;
  word-wrap: break-word;
  text-align: justify;
  box-shadow: 0px 3px 8px 0px rgba(219,235,249,0.51);
  border: 1px solid rgba(213,226,254,1);
}

.have_options_title {
  padding: 0 20px;
  letter-spacing: 0.3px;
  line-height: 21px;
  font-size: 14px;
  font-family: PingFangSC-Regular,PingFang SC;
  font-weight: 400;
  color: #79ABF9;
  margin-bottom: 7px;
}

.text {
  padding-bottom: 10px;
  display: flex;
}

.link {
  font-size: 14px;
  color: #359AE1;
}

.header {
  width: 38px;
  height: 38px;
  margin-right: 10px;
  margin-top: 10px;
}