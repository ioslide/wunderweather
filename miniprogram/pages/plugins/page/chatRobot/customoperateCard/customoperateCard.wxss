/* //浮动录音按钮 */
.recordView{
  position: absolute;
  bottom: 50px;
  right: 15px;
}
.recordImg{
  float: right;
  width: 40px;
  height: 40px;
  background-color: #fff;
  border-radius: 100%;
}
.recordText{
  float: right;
  margin-right: 5px;
  max-width: calc(100% - 45px);
  line-height: 20px;
  font-size:14px;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(102,102,102,1);
  padding: 10px 20px;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 40px;
  display: -webkit-box ;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3; 
}
