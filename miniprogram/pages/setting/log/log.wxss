.container {
  overflow: hidden;
}

.tui-version {
  color: #f54f46;
  font-weight: bold;
}

.tui-log {
  padding: 84rpx 80rpx 30rpx 40rpx;
  box-sizing: border-box;
}

.tui-node {
  padding: 0;
}

.tui-content-log {
  border-radius: 10rpx;
  position: relative;
  padding: 0rpx 26rpx;
  font-size: 28rpx;
  color: #fff;
  background: #5c8dff;
  border: 1rpx solid #5c8dff;
  display: inline-block;
}
