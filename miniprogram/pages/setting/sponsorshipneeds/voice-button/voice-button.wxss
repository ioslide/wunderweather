
.voice {
  position: relative;
  display: flex;
  display: -webkit-flex;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  justify-content: center;
  -webkit-justify-content: center;
  align-items: center;
  -wekbit-align-items:center;
  box-shadow: 5px 5px 7px #f0f0f0,
  -5px -5px 7px #ffffff;
}
.voice-hover {
  box-shadow: inset 3px 3px 4px #f7f5f5,
    inset -3px -3px 4px #ffffff;
}
.voice-button {
  position: absolute;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  left: 0;
}