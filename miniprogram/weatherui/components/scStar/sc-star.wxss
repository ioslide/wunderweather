@import "/weatherui/assets/wxss/icon.wxss";
.-star {
    position: fixed;
    display: flex;
    border-radius: 4px;
    padding-left: 10px;
    font-size: 12px;
    color: #fff;
    right: 15px;
    height: 30px;
    line-height: 30px;
    z-index: 1000;
    transform: translate3d(0,0,0);
}

.-star .-triangle {
    position: absolute;
    top: -8px;
    right: 20px;
    width: 0px;
    height: 0px;
    color: white;
    text-align: center;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-bottom: 8px solid rgba(0,0,0,.8);
}

.-star .-text {
    position: relative;
    float: left;
}

.-star .-btn {
    position: relative;
    float: left;
    padding: 0 10px;
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    height: 30px;
    line-height: 30px;
}