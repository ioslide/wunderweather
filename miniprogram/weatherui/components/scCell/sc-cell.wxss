.sc-ripple {
  border-radius: 100%;
  background-color: rgb(255, 255, 255);
  left: 20px;
  top: 20px;
  opacity: 0.3;
  -webkit-transform: scale(0.3);
  transform: scale(0.3);
  width: 10px;
  height: 10px;
  position: absolute;
}

.sc-ripple-animation-slow {
  -webkit-animation: sc-ripple 0.6s ease-out;
  animation: sc-ripple 0.6s ease-out;
  -webkit-animation-fill-mode: forwards;
  animation-fill-mode: forwards;
}

.sc-ripple-animation-slow-hold {
  -webkit-animation: sc-ripple-hold 1s ease-out;
  animation: sc-ripple-hold 1s ease-out;
  -webkit-animation-fill-mode: forwards;
  animation-fill-mode: forwards;
}

@-webkit-keyframes sc-ripple {
  from {
    -webkit-transform: scale(0.1);
    transform: scale(0.1);
    opacity: 0.3;
  }

  to {
    -webkit-transform: scale(2.5);
    transform: scale(2.5);
    opacity: 0;
  }
}

@keyframes sc-ripple {
  from {
    -webkit-transform: scale(0.1);
    transform: scale(0.1);
    opacity: 0.3;
  }

  to {
    -webkit-transform: scale(2.5);
    transform: scale(2.5);
    opacity: 0;
  }
}

@keyframes sc-ripple-hold {
  from {
    -webkit-transform: scale(0.1);
    transform: scale(0.1);
    opacity: 0.3;
  }

  to {
    -webkit-transform: scale(2.5);
    transform: scale(2.5);
    opacity: 0.3;
  }
}

